{
  "compilerOptions": {
    "plugins": [
      // @tevm/ts-plugin is what provides LSP support in editor for contract imports
      {
        "name": "@tevm/bundler/ts-plugin"
      }
    ],
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/contracts/*": [
        "./contracts/*"
      ],
      // playing around with this being the api
      // will upstream this to @evmts/precompiles package if it works out
      "@evmts/precompiles": [
        "./precompiles/index.ts"
      ],
      "@/src/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "bun-types"
    ]
  }
}
